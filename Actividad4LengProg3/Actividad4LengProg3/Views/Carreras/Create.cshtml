@model ActividadUnidad2.Models.CarreraViewModel

@{
    ViewData["Title"] = "Agregar Carrera";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Codigo"></label>
        <input asp-for="Codigo" class="form-control" />
        <span asp-validation-for="Codigo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CantidadCreditos"></label>
        <input asp-for="CantidadCreditos" class="form-control" />
        <span asp-validation-for="CantidadCreditos" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CantidadMaterias"></label>
        <input asp-for="CantidadMaterias" class="form-control" />
        <span asp-validation-for="CantidadMaterias" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

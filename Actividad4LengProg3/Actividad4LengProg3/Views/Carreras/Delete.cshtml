@model ActividadUnidad2.Models.CarreraViewModel

@{
    ViewData["Title"] = "Eliminar Carrera";
}

<h2>@ViewData["Title"]</h2>

<h4>¿Seguro que deseas eliminar esta carrera?</h4>

<div>
    <p><strong>Código:</strong> @Model.Codigo</p>
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Créditos:</strong> @Model.CantidadCreditos</p>
    <p><strong>Materias:</strong> @Model.CantidadMaterias</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Codigo" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
